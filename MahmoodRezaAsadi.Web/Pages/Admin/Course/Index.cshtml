@page
@model MahmoodRezaAsadi.Web.Pages.Admin.Course.IndexModel
@{
    ViewData["Title"] = "لیست دوره ها";
}


<div class="clearfix">
    <br />
    <br />
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row container">
                            <p></p>
                            <form method="get">
                                <div class="col-sm-3 col-md-3 col-xs-3">
                                    <input type="text" class="form-control" name="filterCourse" placeholder="نام دوره" />
                                </div>
                                <div class="col-sm-3 col-md-3 col-xs-3">
                                    <button type="submit" class="btn btn-info"> بگرد </button>
                                </div>
                                <div class="col-sm-3 col-xs-3 col-md-3">
                                    <a href="/Admin/Course" class="btn btn-default"> خالی کن </a>
                                </div>
                                <div class="col-sm-3 col-xs-3 col-md-3">
                                    <a href="/Admin/Course/Create" class="btn btn-success"> افزودن دوره </a>
                                </div>
                            </form>
                        </div>
                        <br />
                        <div class="clearfix"></div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th class="text-center">نام دوره</th>
                                    <th class="text-center">تصویر</th>
                                    <th class="text-center">تعداد فصل</th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model.CourseList.Course)
                                {
                                    <tr>
                                        <td class="text-center">@course.CourseName</td>
                                        <td class="text-center" style="max-height:180px;max-width:250px;">
                                            <img src="/CourseRoot/Images/@course.ImageName" class="img-thumbnail img-responsive" />
                                        </td>
                                        <td class="text-center">@course.EposodeCount</td>
                                        <td class="text-center col-xs-4 col-sm-4 col-md-2">
                                            <a href="/Admin/Course/Edit/@course.CourseId" class="btn-xs btn-warning">ویرایش</a>
                                            <p></p>
                                            <a href="/Admin/CourseEpisode/@course.CourseId" class="btn-xs btn-primary">فصل های دوره</a>
                                            <p></p>
                                            <a href="/Admin/CourseComment/@course.CourseId" class="btn-xs btn-info">نظرات کاربران</a>
                                            <p></p>
                                            <a href="/Admin/Course/Delete/@course.CourseId" class="btn-xs btn-danger">حذف دوره</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">

                                        @for (int i = 1; i <= Model.CourseList.CourseCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.CourseList.CurrentPage?"active":""))" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/Course?PageId=@i"> @i </a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>