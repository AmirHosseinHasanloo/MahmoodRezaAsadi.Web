@page "{id}"
@model MahmoodRezaAsadi.Web.Pages.Admin.CourseEpisode.CreateModel
@{
    ViewData["Title"] = "افزودن بخش جدید";
}

<div class="clearfix">
    <br />
</div>
<form method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="courseEpisode.CourseId" />

    <div class="row">
        <div class="col-md-8 col-sm-12 col-lg-8 col-xs-12">
            <div class="panel-heading">
                ( افزودن بخش )
            </div>

            <div class="panel-body">
                <div class="form-group">
                    <label>عنوان بخش</label>
                    <input class="form-control" asp-for="courseEpisode.EpisodeTitle" placeholder="عنوان فصل را وارد کنید">
                    <span asp-validation-for="courseEpisode.EpisodeTitle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>زمان فصل</label>
                    <input class="form-control" type="text" asp-for="courseEpisode.EpisodeTime" placeholder="زمان فصل را وارد کنید">
                    <span asp-validation-for="courseEpisode.EpisodeTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>دسترسی</label>
                    <div class="checkbox">
                        <lable>
                            <input type="checkbox" asp-for="courseEpisode.IsFree" /> رایگان است ؟
                        </lable>
                    </div>
                </div>

                <div class="panel-body">
                    <label>نوع فایل بخش</label>
                    <div class="form-group">
                        <select class="form-control" asp-for="courseEpisode.TypeId" asp-items="@(ViewData["episodeTypes"] as SelectList)"></select>
                        <span asp-validation-for="courseEpisode.TypeId" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn-outline btn-primary btn btn-block">ثبت بخش</button>
            </div>
        </div>
        <div class="col-md-4 col-sm-12 col-lg-4 col-xs-12">
            <div class="panel panel-info">
                <div class="panel-heading text-center">
                    ( فایل بخش)
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <br />
                    <div class="form-group">
                        <label>انتخاب فایل :</label>
                        <input type="file" name="video" />
                        <p class="text-danger">
                            وارد کردن ویدیوی فصل اجباریست!
                        </p>
                        @if (ViewData["IsExistsFile"] == "false")
                        {
                            <p class="text-danger">
                                نام فایل معتبر نیست !
                            </p>
                        }
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
</form>

