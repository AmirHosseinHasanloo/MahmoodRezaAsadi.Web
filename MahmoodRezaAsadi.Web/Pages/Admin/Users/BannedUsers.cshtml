@page
@using Core.Convertors
@model MahmoodRezaAsadi.Web.Pages.Admin.Users.BannedUsersModel
@{
    ViewData["Title"] = "کاربران بن شده";
}
<br />
<br />

<div class="row col-sm-12 col-xs-12 col-md-12">
    <div>
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کاربران
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="clearfix"></div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th class="text-center">نام کاربری</th>
                                    <th class="text-center">تاریخ ثبت نام</th>
                                    <th class="text-center">ایمیل</th>
                                    <th class="text-center">وضعیت</th>
                                    <th class="text-center"> دستورات </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td class="text-center">@user.UserName</td>
                                        <td class="text-center">@user.CreateDate.ToShamsi()</td>
                                        <td class="text-center">@user.Email</td>
                                        <td class="text-center">
                                            @if (user.IsActive)
                                            {
                                                <p class="text-success">
                                                    فعال
                                                </p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">
                                                    غیر فعال
                                                </p>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="row">
                                                <a href="/Admin/Users/RecovryUser/@user.UserId" class="btn-xs btn-primary">بازیابی</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><div class="row">
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>