@model List<DataLayer.Entities.User.UserCourses>
@{
    ViewData["Title"] = "دوره های شما";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
            <li class="breadcrumb-item active" aria-current="page"> دوره های من </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_UserPanelSideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1> دوره های من </h1>
                        </header>
                        <br />
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>نام دوره</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Course.CourseTitle</td>

                                        <td>
                                            <a class="btn btn-success" href="/ShowCourse/@item.Course.CourseId">مشاهده</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

